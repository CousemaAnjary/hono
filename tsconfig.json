{
  "compilerOptions": {
  
    /* Language and Environment */
    "target": "es2020",                                 
    "lib": ["es2020","dom"],                           
   
    /* Modules */
    "module": "commonjs",                               
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "outDir": "./dist",                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                                  
  
    /* Completeness */

    "skipLibCheck": true,
    "baseUrl": "./src"                             
  },
  
  "include": ["src/**/*"]
}
